{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1 class="mb-2 text-4xl text-center font-bold tracking-tight text-gray-900 dark:text-white">GÃ©rer les villes</h1>

<div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">Nom</th>
                <th scope="col" class="px-6 py-3">Code Postal</th>
                <th scope="col" class="px-6 py-3">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
                <td class="px-6 py-4">{{ ville.nom }}</td>
                <td class="px-6 py-4">{{ ville.codePostal }}</td>
                <td class="px-6 py-4">
                    <a href="{{ path('app_ville_show', {'id': ville.id}) }}">Modifier</a> -
                    <a href="{{ path('app_ville_edit', {'id': ville.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('app_ville_new') }}">Create new</a>
{% endblock %}
