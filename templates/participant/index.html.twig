{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1 class="mb-2 text-4xl text-center font-bold tracking-tight text-gray-900 dark:text-white">Utilisateurs index
        :</h1>


    <div class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

        <h2 class="max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">Liste des participants : </h2>
    <table class="table">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400" >
        <ul class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700">
            <li class="px-6 py-4">Id :</li>
            <li class="px-6 py-4">Email :</li>
            <li class="px-6 py-4">Roles :</li>
            <li class="px-6 py-4">Prenom :</li>
            <li class="px-6 py-4">Nom :</li>
            <li class="px-6 py-4">Telephone :</li>
            <li class="px-6 py-4">Administrateur :</li>
            <li class="px-6 py-4">Actif :</li>
        </ul>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr >
                <td >{{ participant.id }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.roles ? participant.roles|json_encode : '' }}</td>
                <td>{{ participant.password }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_participant_show', {'id': participant.id}) }}">show</a>
                    <a href="{{ path('app_participant_edit', {'id': participant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    </div>
{% endblock %}
